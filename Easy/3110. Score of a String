class Solution {
public:
    int scoreOfString(string s) {
        
        int count = 0;
        for(int i=0; i<s.size() - 1; i++){
            
            int n1 = s[i];
            int n2 = s[i+1];
            
            count += abs(n2 - n1);
            
        }
        
        return count;
        
    }
};
